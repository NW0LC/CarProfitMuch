<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--这里是设置progressbar的背景样式-->
    <item
        android:id="@android:id/background"
        android:drawable="@drawable/main_bar_color_bg" />
    <!--这里是设置progressbar2的进度条样式-->
    <item android:id="@android:id/secondaryProgress">
        <clip
            android:drawable="@drawable/main_bar_color_second_progress" />
    </item>
    <!--这里是设置progressbar的进度条样式-->
    <item android:id="@android:id/progress">
        <scale
            android:drawable="@drawable/main_bar_color_progress"
            android:scaleWidth="100%" />
    </item>


</layer-list>