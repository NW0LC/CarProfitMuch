<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="95dp"
        android:minWidth="50dp"
        tool:background="@color/MaterialGrey200" />
    <TextView
        android:id="@+id/tv_title"
        android:text=""
        android:lines="1"
        android:ellipsize="end"
        android:layout_margin="@dimen/margin_5"
        android:textColor="@color/MaterialGrey700"
        android:textSize="@dimen/text_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/margin_70"
        tool:background="@color/MaterialGrey200" />
    <TextView
        android:id="@+id/tv_old_price"
        android:text=""
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_5"
        android:textColor="@color/MaterialGrey400"
        android:textSize="@dimen/text_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/margin_70"
        tool:background="@color/MaterialGrey200" />
<RelativeLayout
    android:background="@color/MaterialGrey200"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginStart="@dimen/margin_15"
        android:id="@+id/tv_price"
        android:text=""
        android:lines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/margin_70"
        tool:background="@color/MaterialGrey200" />
    <TextView
        android:textColor="@color/White"
        android:gravity="center"
        android:text="@string/main_store_goods_buy"
        android:textSize="@dimen/text_14"
        android:layout_alignParentEnd="true"
        android:background="@drawable/vector_main_store_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

</LinearLayout>