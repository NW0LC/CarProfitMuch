<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_score_pay_success">

        <ImageView
            android:id="@+id/bt_score_success_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_score_pay_success_close"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_120"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:text="@string/score_pay_success"
            android:textColor="@color/MaterialGrey700"
            android:textSize="@dimen/text_16" />
    </RelativeLayout>
</FrameLayout>