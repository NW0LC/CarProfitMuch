<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/bt_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:rv_backgroundColor="@color/White"
    app:rv_cornerRadius="6dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center"
        android:text="@string/score_confirm_address"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_16" />

    <LinearLayout
        android:id="@+id/bt_choose_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_8"
        android:paddingStart="@dimen/margin_15">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_confirm_address_people"
                    android:textColor="@color/MaterialGrey700"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:minWidth="@dimen/margin_90"
                    android:text=""
                    android:hint="@string/hint_default"
                    android:textColor="@color/MaterialGrey500"
                    android:textSize="@dimen/text_12"
                    tool:background="@color/MaterialGrey200" />

                <TextView
                    android:id="@+id/tv_userPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:ellipsize="end"
                    android:lines="1"
                    android:gravity="end"
                    android:minWidth="@dimen/margin_90"
                    android:text=""
                    android:hint="@string/hint_default"
                    android:textColor="@color/MaterialGrey500"
                    android:textSize="@dimen/text_12"
                    tool:background="@color/MaterialGrey200" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/margin_160"
                    android:hint="@string/hint_default"
                    android:textColor="@color/MaterialGrey500"
                    android:textSize="@dimen/text_14"
                    tool:background="@color/MaterialGrey200" />


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/icon_score_store_confirm_address"
            android:drawablePadding="@dimen/margin_5"
            android:gravity="end|center_vertical"
            android:text=""
            android:textColor="@color/MaterialGrey400"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@mipmap/icon_score_store_confirm_line" />
</com.flyco.roundview.RoundLinearLayout>