<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_a7000000"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="@dimen/margin_15"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_map_treasure_bg"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_100"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="恭喜您获得宝藏!"
                android:textColor="@color/Red"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/MaterialGrey600"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />


            <com.flyco.roundview.RoundTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rv_backgroundColor="@color/Red"
                android:layout_gravity="bottom"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginTop="40dp"
                android:text="进入店铺"
                android:id="@+id/tv_store"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:rv_cornerRadius="5dp"
                android:padding="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获得时间:"
                    android:textSize="14sp"
                    android:textColor="@color/MaterialGrey800"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-12-6 12:30"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textSize="14sp"
                    android:textColor="@color/MaterialGrey400"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="30dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获得方式:"
                    android:textSize="14sp"
                    android:textColor="@color/MaterialGrey800"
                    />
                <TextView
                    android:id="@+id/tv_get_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="凭记录到店领取"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textSize="14sp"
                    android:textColor="@color/MaterialGrey400"
                    />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>