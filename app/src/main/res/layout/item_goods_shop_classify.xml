<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/line_select"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimary"
            android:text=""
            android:textColor="@color/MaterialGrey700" />

        <TextView
            android:id="@+id/classifyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/MaterialGrey700"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/classifyNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15"
            android:drawableEnd="@mipmap/icon_main_gray_next"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/main_see_all"
            android:textColor="@color/MaterialGrey500"
            android:textSize="@dimen/text_12" />
    </LinearLayout>
    <TextView
        android:id="@+id/line_select_bottom"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/MaterialGrey200" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>