<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableHeaderTranslationContent="true"
        app:srlEnablePreviewInEditMode="false">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:visibility="gone"
            app:srlAccentColor="@android:color/black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingTop="?attr/actionBarSize"
            tool:listitem="@layout/item_main_store_goods">

        </android.support.v7.widget.RecyclerView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/action_bar_custom" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <com.github.mmin18.widget.RealtimeBlurView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:realtimeBlurRadius="10dp"
                app:realtimeOverlayColor="@color/blur_bg_white" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <com.szw.framelibrary.view.DrawableCenterButton
                    android:id="@+id/radioButton1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="@dimen/margin_5"
                    android:drawableEnd="@drawable/selector_service_list_triangle_grey"
                    android:gravity="center"
                    android:text="@string/service_list_sort_default"
                    android:textColor="@color/MaterialGrey600"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/app_bg"/>

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/search_filter_sort_sold"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/MaterialGrey600" />

                <!--<View-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@color/app_bg"/>-->

                <!--<ImageView-->
                    <!--android:id="@+id/radioButton3"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:padding="@dimen/margin_15"-->
                    <!--android:gravity="center"-->
                    <!--android:button="@null"-->
                    <!--android:src="@drawable/selector_search_column"-->
                    <!--/>-->

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/app_bg"/>

                <com.szw.framelibrary.view.DrawableCenterButton
                    android:id="@+id/radioButton4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:button="@null"
                    android:drawablePadding="@dimen/margin_5"
                    android:drawableEnd="@drawable/selector_search_filter"
                    android:gravity="center"
                    android:text="筛选"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/MaterialGrey600" />

            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>