<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_score_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_20"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:id="@+id/tv_score_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:minWidth="@dimen/margin_160"
                android:text=""
                android:textColor="@color/MaterialGrey800"
                android:textSize="@dimen/text_18"
                tool:background="@color/MaterialGrey200" />

            <LinearLayout
                android:id="@+id/bt_code_exchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15">

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/tv_score_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingEnd="@dimen/margin_5"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_5"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_14"
                    app:rv_backgroundColor="#ffffff"
                    app:rv_backgroundPressColor="@color/colorPrimary"
                    app:rv_cornerRadius_BL="20dp"
                    app:rv_cornerRadius_TL="20dp"
                    app:rv_isRippleEnable="false"
                    app:rv_strokeColor="@color/colorPrimary"
                    app:rv_strokePressColor="@color/colorPrimary"
                    app:rv_strokeWidth="1dp"
                    app:rv_textPressColor="#ffffff" />

                <com.flyco.roundview.RoundTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_5"
                    android:text="@string/main_store_score_exchange"
                    android:textColor="@color/White"
                    app:rv_backgroundColor="@color/colorPrimary"
                    app:rv_backgroundPressColor="@color/colorPrimary"
                    app:rv_cornerRadius_BR="20dp"
                    app:rv_cornerRadius_TR="20dp"
                    app:rv_isRippleEnable="false"
                    app:rv_textPressColor="@color/White" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>